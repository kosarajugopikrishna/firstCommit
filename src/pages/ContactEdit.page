<apex:page standardController="Contact">
<apex:form >
<apex:pageBlock title="Edit Contact: {!Contact.Name}" mode="edit">
<apex:pageBlock title="New Contact">
<apex:pageBlockSection title="Contact Details" columns="2">
<apex:inputField value="{!Contact.Firstname}"/>
<apex:inputField value="{!Contact.Lastname}"/>
<apex:inputField value="{!Contact.Phone}"/>
<apex:inputField value="{!Contact.MobilePhone}"/>

<apex:inputText value="{!Contact.Email}"
label="{!Contact.FirstName + 'â€™s Email'}"/>
</apex:pageBlockSection>
<apex:pageBlockButtons >
<apex:commandButton action="{!save}" value="Save"/>
</apex:pageBlockButtons>
</apex:pageBlock>
</apex:pageblock>
</apex:form>
</apex:page>
